@page
@model MarkPeople.Pages.Marks.EditModel

@{
    ViewData["Title"] = "Редактировать";
}

<h1>Редактировать</h1>

<h4>Список качеств</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MarkQuality.MarkQualityId" />
            <div class="form-group">
                <label asp-for="MarkQuality.PeopleId" class="control-label">Человек</label>
                <select asp-for="MarkQuality.PeopleId" class="form-control" asp-items="ViewBag.PeopleId"></select>
                <span asp-validation-for="MarkQuality.PeopleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MarkQuality.Beauty" class="control-label">Красота</label>
                <input asp-for="MarkQuality.Beauty" class="form-control" />
                <span asp-validation-for="MarkQuality.Beauty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MarkQuality.Power" class="control-label">Сила</label>
                <input asp-for="MarkQuality.Power" class="form-control" />
                <span asp-validation-for="MarkQuality.Power" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MarkQuality.Mind" class="control-label">Ум</label>
                <input asp-for="MarkQuality.Mind" class="form-control" />
                <span asp-validation-for="MarkQuality.Mind" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">

                    <input class="form-check-input" asp-for="MarkQuality.IsLikePizzaPineApple" /> 
                    @*@Html.DisplayNameFor(model => model.MarkQuality.IsLikePizzaPineApple)*@
                    Любит пиццу с ананасами
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
