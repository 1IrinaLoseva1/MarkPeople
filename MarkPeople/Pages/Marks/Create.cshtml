            </div>
            <div class="form-group">
                <label asp-for="MarkQuality.Power" class="control-label"></label>
                <input asp-for="MarkQuality.Power" class="form-control" />
                <span asp-validation-for="MarkQuality.Power" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MarkQuality.Mind" class="control-label"></label>
                <input asp-for="MarkQuality.Mind" class="form-control" />
                <span asp-validation-for="MarkQuality.Mind" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="MarkQuality.IsLikePizzaPineApple" /> @Html.DisplayNameFor(model => model.MarkQuality.IsLikePizzaPineApple)
