@model MarkPeople.Pages.Marks.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>MarkQuality</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MarkQuality.PeopleId" class="control-label"></label>
                <select asp-for="MarkQuality.PeopleId" class ="form-control" asp-items="ViewBag.PeopleId"></select>
            </div>
            <div class="form-group">
                <label asp-for="MarkQuality.Beauty" class="control-label"></label>
                <input asp-for="MarkQuality.Beauty" class="form-control" />
