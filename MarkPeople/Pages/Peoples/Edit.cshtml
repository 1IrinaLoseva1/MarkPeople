@page
@model MarkPeople.Pages.Peoples.EditModel

@{
    ViewData["Title"] = "Редактировать";
}

    <h1>Редактировать</h1>

<h4>Список людей</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="People.PeopleId" />
            <div class="form-group">
                <label asp-for="People.PeopleName" class="control-label">Имя</label>
                <input asp-for="People.PeopleName" class="form-control" />
                <span asp-validation-for="People.PeopleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="People.PeopleSurname" class="control-label">Фамилия</label>
                <input asp-for="People.PeopleSurname" class="form-control" />
                <span asp-validation-for="People.PeopleSurname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="People.PeopleAge" class="control-label">Возраст</label>
                <input asp-for="People.PeopleAge" class="form-control" />
                <span asp-validation-for="People.PeopleAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="People.PeopleWeight" class="control-label">Вес</label>
                <input asp-for="People.PeopleWeight" class="form-control" />
                <span asp-validation-for="People.PeopleWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="People.PeopleBDay" class="control-label">День рождения</label>
                <input asp-for="People.PeopleBDay" class="form-control" />
                <span asp-validation-for="People.PeopleBDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="People.CountryId" class="control-label">Страна</label>
                <select asp-for="People.CountryId" class="form-control" asp-items="ViewBag.CountryId"></select>
                <span asp-validation-for="People.CountryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
